    <!-- Friends Routes -->
    <div class="route_list">
        <a name="friends_routes">
            <h2>Friends API Routes</h2>
        </a>
        <table class="table table-dark" style="border-radius:8px;">
            <thead>
                <tr>
                    <th scope="col">API Version</th>
                    <th scope="col">Type</th>
