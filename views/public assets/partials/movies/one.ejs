                <% if(index + 1 <= 12) { %>
                    <div class="col-md-2 image-box" >
                        <a href="/movies/<%= movie.id %>">
                            <% if(typeof user != 'undefined') { %>
                                <img class="img-fluid image-box-hover" src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>"
