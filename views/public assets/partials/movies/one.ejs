    <!-- Movie tag line -->
    <div class="row">
        <div class="col-md-1">

        </div>
        <div class="col-md-10">
            <p class="text-center">
                <b><%= page_data.movie.tagline %></b>
            </p>
        </div>
        <div class="col-md-1">
            <a style="float:right; color:lightblue;" href="https://www.themoviedb.org/movie/<%= page_data.movie.id %>">Report</a>
        </div>

    </div>

