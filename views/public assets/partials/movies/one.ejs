                                    onload="    
                                        checkIfFavourited('<%= user._id %>', '<%= movie.id %>')
                                        checkIfWatched('<%= user._id %>', '<%= movie.id %>')
                                        checkIfSaved('<%= user._id %>', '<%= movie.id %>')">

                            <% } else { %>
                                    <img class="img-fluid image-box-hover" src="https://image.tmdb.org/t/p/w500/<%= movie.poster_path %>" alt="" >
