<div class="container" style="margin-top:16px;">
  <h2>Badges</h2>
  <% if (!(page_data.badges||[]).length) { %>
    <div style="opacity:.8;">No badges yet.</div>
  <% } %>
  <div class="row" style="margin-top:10px;">
    <% (page_data.badges||[]).forEach(function(b){ %>
      <div class="col-md-3" style="margin-bottom:12px;">
        <div class="card" style="background:#151515;border:1px solid #2a2a2a;border-radius:10px; color:#fff;">
          <div class="card-body" style="display:flex; gap:10px; align-items:center;">
            <% if (b.icon) { %>
              <img src="<%= b.icon %>" style="width:42px; height:42px; object-fit:contain;">
            <% } %>
            <div>
              <div style="font-weight:700;"><%= b.title %></div>
              <% if (b.level && b.level !== 'single') { %>
                <div style="opacity:.8; font-size:12px;">Level: <%= b.level %></div>
              <% } %>
              <% if (b.awarded_at) { %>
                <div style="opacity:.8; font-size:12px;">Awarded: <%= new Date(b.awarded_at).toLocaleDateString() %></div>
              <% } %>
              <% if (b.description) { %>
                <div style="opacity:.8; font-size:12px; margin-top:4px;"><%= b.description %></div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
