<%
  var basePath = (page_data.user.profile.custom_url && page_data.user.profile.custom_url !== '')
    ? '/' + page_data.user.profile.custom_url
    : '/' + page_data.user._id;
%>

<div class="profile-quicklinks container">
  <a class="quick-card" href="<%= basePath %>">
    <span class="quick-card__icon"><i class="fas fa-chart-line"></i></span>
    <span class="quick-card__text">Activity</span>
  </a>
  <a class="quick-card" href="<%= basePath %>/watched/movies">
    <span class="quick-card__icon"><i class="fas fa-film"></i></span>
    <span class="quick-card__text">Watched Movies</span>
  </a>
  <a class="quick-card" href="<%= basePath %>/watched/shows">
    <span class="quick-card__icon"><i class="fas fa-tv"></i></span>
    <span class="quick-card__text">Watched Shows</span>
  </a>
  <a class="quick-card" href="<%= basePath %>/favourites">
    <span class="quick-card__icon"><i class="fas fa-heart"></i></span>
    <span class="quick-card__text">Favourites</span>
  </a>
  <a class="quick-card" href="<%= basePath %>/bookmarked">
    <span class="quick-card__icon"><i class="fas fa-bookmark"></i></span>
    <span class="quick-card__text">Saved Lists</span>
  </a>
  <% var isPremium = (page_data.user && (
        (page_data.user.profile && page_data.user.profile.flags && page_data.user.profile.flags.premium) ||
        (page_data.user.account && page_data.user.account.plan === 'premium')
      )); %>
  <% if (isPremium) { %>
    <a class="quick-card" href="<%= basePath %>/stats" title="Stats">
      <span class="quick-card__icon"><i class="fas fa-chart-pie"></i></span>
      <span class="quick-card__text">Stats</span>
    </a>
  <% } else { %>
    <a class="quick-card is-disabled" href="#" aria-disabled="true" title="Premium required">
      <span class="quick-card__icon"><i class="fas fa-chart-pie"></i></span>
      <span class="quick-card__text">Stats <i class="fas fa-lock" style="margin-left:6px; font-size: 0.9em;"></i></span>
    </a>
  <% } %>
</div>
