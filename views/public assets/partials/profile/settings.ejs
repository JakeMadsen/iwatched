            <input type="hidden" name="pref_home_logo_to_profile" value="0">
            <div style="margin:8px 0 12px; display:flex; align-items:center; gap:10px;">
                <input type="checkbox" id="pref_home_logo_to_profile" name="pref_home_logo_to_profile" value="1" <%= ((page_data && page_data.user && page_data.user.profile && page_data.user.profile.preferences && page_data.user.profile.preferences.home_logo_to_profile) || (user && user.profile && user.profile.preferences && user.profile.preferences.home_logo_to_profile)) ? 'checked' : '' %> />
