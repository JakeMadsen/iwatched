    <script>
        var password = document.getElementById("user_password")
            , confirm_password = document.getElementById("user_password_confirm");

        function validatePassword() {
            if (password.value != confirm_password.value) {
                confirm_password.setCustomValidity("Passwords Don't Match");
            } else {
                confirm_password.setCustomValidity('');
            }
        }

        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
    </script>
    <script>
      (function(){
        document.addEventListener('DOMContentLoaded', function(){
          // Auto-save Site Preferences on toggle
          try {
            var spForm = document.getElementById('site_prefs_form');
            function savePrefs(){
              try {
                if (!spForm) return;
                var url = spForm.action + '?ajax=1';
                var data = new URLSearchParams(new FormData(spForm)).toString();
                fetch(url, { method:'POST', headers:{ 'Content-Type':'application/x-www-form-urlencoded' }, body: data })
                  .then(function(r){ return r.ok ? r.json() : r.json().then(function(j){ throw j||{}; }); })
                  .then(function(){ try { window.showToast && showToast('Preferences saved','success'); } catch(_){} })
                  .catch(function(){ try { window.showToast && showToast('Failed to save preferences','error'); } catch(_){} });
              } catch(_){}
            }
            ;['pref_show_quick_actions','pref_hide_watched_in_search','pref_home_logo_to_profile'].forEach(function(id){
              var el = document.getElementById(id); if (el) el.addEventListener('change', savePrefs);
            });
          } catch(_){}
          // Toggle GDPR section
          try {
            var gBtn = document.getElementById('gdpr_toggle_btn');
            var gBody = document.getElementById('gdpr_body');
            if (gBtn && gBody){
              gBtn.addEventListener('click', function(e){ e.preventDefault(); var vis = gBody.style.display !== 'none'; gBody.style.display = vis ? 'none' : 'block'; gBtn.setAttribute('aria-expanded', String(!vis)); });
            }
          } catch(_){}

          // De-activate account
          try {
            var deact = document.getElementById('gdpr_deactivate_btn');
            if (deact){
              deact.addEventListener('click', function(){
                if (!confirm('De-activate your account? You can contact support to reactivate later.')) return;
                var url = '/<%= (user && user.profile && user.profile.custom_url) ? user.profile.custom_url : user._id %>/settings/deactivate';
                fetch(url, { method:'POST' })
                  .then(function(r){ if(!r.ok) return r.json().then(function(j){ throw j||{}; }); return r.json(); })
                  .then(function(){ window.location.href = '/logout'; })
                  .catch(function(err){
                    var msg = (err && err.message) || 'Failed to de-activate account.';
                    try { window.showToast && showToast(msg, 'error'); } catch(_) { alert(msg); }
                  });
              });
            }
          } catch(_){}
        });
      })();
    </script>
    <script>
      (function(){
        // GDPR actions
        try {
          var delBtn = document.getElementById('gdpr_delete_btn');
          if (delBtn) {
            delBtn.addEventListener('click', function(){
              try {
                var pwd = window.prompt('Please confirm your password to permanently delete your account. This cannot be undone.');
                if (pwd === null) return; // cancelled
                var url = '/<%= (user && user.profile && user.profile.custom_url) ? user.profile.custom_url : user._id %>/settings/delete';
                fetch(url, { method:'POST', headers:{ 'Content-Type':'application/json' }, body: JSON.stringify({ password: pwd }) })
                  .then(function(r){ if(!r.ok) return r.json().then(function(j){ throw j||{}; }); return r.json(); })
                  .then(function(){ window.location.href = '/logout'; })
                  .catch(function(err){
                    var msg = (err && err.message) || 'Failed to delete account. Please check your password and try again.';
                    try { window.showToast && showToast(msg, 'error'); } catch(_) { alert(msg); }
                  });
              } catch(_){}
            });
          }
        } catch(_){}
        document.addEventListener('DOMContentLoaded', function(){
          try {
            var form = document.getElementById('profile_settings_form');
            if(!form) return;
            var isPremium = <%= JSON.stringify(!!(page_data && page_data.user && page_data.user.account && page_data.user.account.plan === 'premium')) %>;
            var max = isPremium ? (8*1024*1024) : (5*1024*1024);
            function check(input, errorEl){
              try {
                if (!input || !input.files || input.files.length === 0) { errorEl.style.display='none'; errorEl.textContent=''; return true; }
                var f = input.files[0];
                if (f.size > max){
                  var mb = Math.floor(max/1024/1024);
                  errorEl.textContent = 'File is too large. Max ' + mb + 'MB for your plan.';
                  errorEl.style.display = 'block';
                  return false;
                }
                errorEl.style.display='none'; errorEl.textContent='';
                return true;
              } catch(_) { return true; }
            }
            var avatar = document.getElementById('profilePictureFile');
            var banner = document.getElementById('profileBannerFile');
            var aErr = document.getElementById('avatar_size_error');
            var bErr = document.getElementById('banner_size_error');
            if (avatar) avatar.addEventListener('change', function(){ check(avatar, aErr); });
            if (banner) banner.addEventListener('change', function(){ check(banner, bErr); });
            form.addEventListener('submit', function(e){
              var okA = check(avatar, aErr);
              var okB = check(banner, bErr);
              if (!okA || !okB){ e.preventDefault(); try { window.showToast && showToast('One or more files exceed your limit','warning'); } catch(_){} }
            });
          } catch(_){}
        });
      })();
    </script>
