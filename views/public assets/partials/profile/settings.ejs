                <label for="pref_show_quick_actions" style="margin:0;">Always show Quick Actions</label>
            </div>

            <input type="hidden" name="pref_hide_watched_in_search" value="0">
            <div style="margin:8px 0 12px; display:flex; align-items:center; gap:10px;">
                <input type="checkbox" id="pref_hide_watched_in_search" name="pref_hide_watched_in_search" value="1" <%= ((page_data && page_data.user && page_data.user.profile && page_data.user.profile.preferences && page_data.user.profile.preferences.hide_watched_in_search) || (user && user.profile && user.profile.preferences && user.profile.preferences.hide_watched_in_search)) ? 'checked' : '' %> />
                <label for="pref_hide_watched_in_search" style="margin:0;">Hide movies/shows I've already watched in search results</label>
