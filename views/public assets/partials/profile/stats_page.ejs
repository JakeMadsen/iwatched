  <div class="row g-3 section-row">
    <div class="col-12 col-md-4">
      <div class="metric-large surface enter-fade">
        <div class="metric-large__label"><i class="far fa-star"></i> My Favorite Movie</div>
        <div class="metric-large__value" data-stat="fav-user-movie">Inception</div>
        <div class="metric-large__hint" data-stat="fav-user-movie-year">2010</div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="metric-large surface enter-fade" style="--enter-delay:.05s;">
        <div class="metric-large__label"><i class="far fa-user"></i> My Favorite Actor</div>
        <div class="metric-large__value" data-stat="fav-user-actor">Leonardo DiCaprio</div>
