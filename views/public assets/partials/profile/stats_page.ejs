  <script>
    (function(){
      function setText(sel, value){
        try {
          var el = document.querySelector(sel);
          if (el && value !== undefined && value !== null && value !== ''){
            el.textContent = String(value);
          }
        } catch(_){}
      }
      function minsToTextShort(mins){
        try {
          var m = Math.max(0, Math.floor(Number(mins||0)));
          var h = Math.floor(m / 60);
          var r = m % 60;
          if (h && r) return h + 'h ' + r + 'm';
          if (h) return h + 'h';
          return r + 'm';
        } catch(_){ return ''; }
      }
      document.addEventListener('DOMContentLoaded', function(){
        try {
          var uid = '<%= page_data && page_data.user && page_data.user._id ? String(page_data.user._id) : "" %>';
          if (!uid) return;
          var loadingEl = document.getElementById('stats_loading');
          if (loadingEl) loadingEl.style.display = '';
          fetch('/api/v1/user-stats/' + encodeURIComponent(uid))
            .then(function(r){ if(!r.ok) throw new Error('stats_failed'); return r.json(); })
            .then(function(payload){
              if (!payload || !payload.ok || !payload.stats) return;
              var s = payload.stats || {};
              var movies = s.movies || {};

              // Favorite movie
              if (s.favorite_movie){
                var fm = s.favorite_movie;
                setText('[data-stat="fav-user-movie"]', fm.title || '-');
                if (fm.year){
                  setText('[data-stat="fav-user-movie-year"]', fm.year);
                }
              }

              // Most rewatched movie hero
              if (s.most_rewatched_movie){
                var mr = s.most_rewatched_movie;
                setText('[data-stat="hero-movie-title"]', mr.title || '-');
                if (mr.watch_count){
                  setText('[data-stat="hero-movie-count"]', mr.watch_count + ' times');
                  var badge = document.querySelector('.hero__badge');
                  if (badge){ badge.innerHTML = '<i class="fas fa-redo"></i> Watched ' + mr.watch_count + 'x'; }
                }
                if (mr.personal_rating){
                  setText('[data-stat="hero-movie-rating"]', (mr.personal_rating.toFixed ? mr.personal_rating.toFixed(1) : mr.personal_rating) + '/10');
                }
                if (mr.runtime_minutes){
                  setText('[data-stat="hero-movie-runtime"]', minsToTextShort(mr.runtime_minutes));
                }
              }

              // Most viewed genres (top 5)
              try {
                if (Array.isArray(movies.genres)){
                  var rows = document.querySelectorAll('.genre-list .genre-row');
                  for (var i=0;i<rows.length;i++){
                    var row = rows[i];
                    var g = movies.genres[i];
                    if (!g){
                      row.style.display = 'none';
                      continue;
                    }
                    row.style.display = '';
                    var labelEl = row.querySelector('.genre-row__label');
                    var valEl = row.querySelector('.genre-row__value');
                    var bar = row.querySelector('.progress-bar');
                    if (labelEl) labelEl.textContent = g.name || '-';
                    if (valEl) valEl.textContent = (g.count || 0) + ' movies';
                    if (bar){
                      var pct = g.pct_of_top || 0;
                      bar.setAttribute('data-pct', pct);
                      bar.style.width = Math.max(0, Math.min(100, pct)) + '%';
                    }
                  }
                }
              } catch(_){}

              // Timeline distribution + oldest / newest
              try {
                var tl = movies.timeline || {};
                var pre = tl.pre2000 || {};
                var post = tl.post2000 || {};
                var segA = document.querySelector('.stacked-bar__segment--a');
                var segB = document.querySelector('.stacked-bar__segment--b');
                if (segA){
                  var pctA = pre.pct || 0;
                  segA.setAttribute('data-pct', pctA);
                  segA.style.width = Math.max(0, Math.min(100, pctA)) + '%';
                  var spanA = segA.querySelector('span'); if (spanA) spanA.textContent = pctA + '%';
                }
                if (segB){
                  var pctB = post.pct || 0;
                  segB.setAttribute('data-pct', pctB);
                  segB.style.width = Math.max(0, Math.min(100, pctB)) + '%';
                  var spanB = segB.querySelector('span'); if (spanB) spanB.textContent = pctB + '%';
                }
                if (tl.oldest_movie_watched){
                  setText('[data-stat="oldest-title"]', tl.oldest_movie_watched.title || '-');
                  setText('[data-stat="oldest-year"]', tl.oldest_movie_watched.year || '');
                }
                if (tl.newest_release_watched){
                  setText('[data-stat="newest-title"]', tl.newest_release_watched.title || '-');
                  setText('[data-stat="newest-year"]', tl.newest_release_watched.year || '');
                }
              } catch(_){}

              // Movies by decade + favourite decade
              try {
                if (Array.isArray(movies.decades)){
                  var decadeEls = document.querySelectorAll('.decade-bars .decade');
                  var maxCount = 0;
                  movies.decades.forEach(function(d){ if (d && d.count && d.count > maxCount) maxCount = d.count; });
                  for (var j=0;j<decadeEls.length;j++){
                    var de = decadeEls[j];
                    var d = movies.decades[j];
                    if (!d){
                      de.style.display = 'none';
                      continue;
                    }
                    de.style.display = '';
                    var vEl = de.querySelector('.decade__value');
                    var lEl = de.querySelector('.decade__label');
                    var fill = de.querySelector('.decade__fill');
                    if (vEl) vEl.textContent = d.count || 0;
                    if (lEl) lEl.textContent = d.label || '';
                    if (fill){
                      var pctH = maxCount ? Math.round((d.count || 0) / maxCount * 100) : 0;
                      fill.setAttribute('data-height', pctH);
                      fill.style.height = Math.max(10, Math.min(100, pctH)) + '%';
                    }
                  }
                }
                if (movies.favorite_decade){
                  setText('[data-stat="fav-decade"]', movies.favorite_decade.label || '');
                  if (movies.favorite_decade.count){
                    setText('[data-stat="fav-decade-count"]', movies.favorite_decade.count + ' movies watched');
                  }
                }
              } catch(_){}

              // Top directors / actors
              try {
                function populatePeople(list, selectorPrefix){
                  var container = document.querySelector(selectorPrefix + ' .ranked-list');
                  if (!container || !Array.isArray(list)) return;
                  container.innerHTML = '';
                  list.forEach(function(p, idx){
                    var li = document.createElement('li');
                    li.className = 'ranked-item';
                    var rank = document.createElement('span');
                    rank.className = 'ranked-item__rank';
                    rank.textContent = (idx+1);
                    var avatar = document.createElement('span');
                    avatar.className = 'avatar avatar--initials';
                    var initials = (p.name || '').split(' ').map(function(x){ return x.charAt(0).toUpperCase(); }).join('').slice(0,3);
                    avatar.textContent = initials || '?';
                    var name = document.createElement('span');
                    name.className = 'ranked-item__name';
                    name.textContent = p.name || '';
                    var meta = document.createElement('span');
                    meta.className = 'ranked-item__meta';
                    meta.textContent = (p.count || 0) + ' movies';
                    li.appendChild(rank);
                    li.appendChild(avatar);
                    li.appendChild(name);
                    li.appendChild(meta);
                    container.appendChild(li);
                  });
                }
                populatePeople(movies.top_directors, '.surface.panel:has(h3:nth-child(1):contains("Top Directors"))'); // fallback below
              } catch(_){}

              try {
                // Fallback: select by heading text with simple query
                function findPanel(title){
                  var panels = document.querySelectorAll('.surface.panel');
                  for (var i=0;i<panels.length;i++){
                    var h = panels[i].querySelector('.panel__header h3');
                    if (h && h.textContent && h.textContent.indexOf(title) !== -1) return panels[i];
                  }
                  return null;
                }
                function populatePeople2(list, title){
                  var panel = findPanel(title);
                  if (!panel || !Array.isArray(list)) return;
                  var container = panel.querySelector('.ranked-list');
                  if (!container) return;
                  container.innerHTML = '';
                  list.forEach(function(p, idx){
                    var li = document.createElement('li');
                    li.className = 'ranked-item';
                    var rank = document.createElement('span');
                    rank.className = 'ranked-item__rank';
                    rank.textContent = (idx+1);
                    var avatar = document.createElement('span');
                    avatar.className = 'avatar avatar--initials';
                    var initials = (p.name || '').split(' ').map(function(x){ return x.charAt(0).toUpperCase(); }).join('').slice(0,3);
                    avatar.textContent = initials || '?';
                    var name = document.createElement('span');
                    name.className = 'ranked-item__name';
                    name.textContent = p.name || '';
                    var meta = document.createElement('span');
                    meta.className = 'ranked-item__meta';
                    meta.textContent = (p.count || 0) + ' movies';
                    li.appendChild(rank);
                    li.appendChild(avatar);
                    li.appendChild(name);
                    li.appendChild(meta);
                    container.appendChild(li);
                  });
                }
                populatePeople2(movies.top_directors, 'Top Directors');
                populatePeople2(movies.top_actors, 'Top Actors');

              } catch(_){}

              // Longest / shortest movie
              try {
                if (movies.longest_movie){
                  setText('[data-stat="longest-runtime"]', (movies.longest_movie.runtime_minutes || 0) + ' min');
                  setText('[data-stat="longest-title"]', movies.longest_movie.title || '');
                }
                if (movies.shortest_movie){
                  setText('[data-stat="shortest-runtime"]', (movies.shortest_movie.runtime_minutes || 0) + ' min');
                  setText('[data-stat="shortest-title"]', movies.shortest_movie.title || '');
                }
              } catch(_){}
            })
            .catch(function(){})
            .finally(function(){
              try {
                if (loadingEl) loadingEl.style.display = 'none';
              } catch(_){}
            });
        } catch(_){}
      });
    })();
  </script>
