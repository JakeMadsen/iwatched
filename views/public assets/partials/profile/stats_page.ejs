            <div class="progress"><div class="progress-bar accent-1" data-pct="86"></div></div>
            <div class="genre-row__value">87 movies</div>
          </div>
          <div class="genre-row">
            <div class="genre-row__label">Drama</div>
            <div class="progress"><div class="progress-bar accent-2" data-pct="64"></div></div>
            <div class="genre-row__value">65 movies</div>
          </div>
          <div class="genre-row">
            <div class="genre-row__label">Sci-Fi</div>
            <div class="progress"><div class="progress-bar accent-3" data-pct="52"></div></div>
            <div class="genre-row__value">52 movies</div>
          </div>
          <div class="genre-row">
            <div class="genre-row__label">Comedy</div>
            <div class="progress"><div class="progress-bar accent-4" data-pct="48"></div></div>
            <div class="genre-row__value">48 movies</div>
          </div>
          <div class="genre-row">
            <div class="genre-row__label">Thriller</div>
            <div class="progress"><div class="progress-bar accent-5" data-pct="42"></div></div>
            <div class="genre-row__value">42 movies</div>
          </div>
        </div>
      </div>
    </div>
  </div>



  <div class="row g-3 section-row">
    <div class="col-12">
      <div class="surface panel enter-fade">
        <div class="panel__header panel__header--between"><h3>Timeline Distribution</h3><div class="muted">Pre-2000 / Post-2000</div></div>
        <div class="stacked-bar">
          <div class="stacked-bar__segment stacked-bar__segment--a" data-pct="26"><span>26%</span></div>
          <div class="stacked-bar__segment stacked-bar__segment--b" data-pct="74"><span>74%</span></div>
        </div>
        <div class="row g-3">
          <div class="col-12 col-md-6 col-lg-3">
            <div class="mini-card surface">
              <div class="mini-card__label"><i class="far fa-hourglass-start"></i> Oldest Watched</div>
              <div class="mini-card__title" data-stat="oldest-title"><%= (page_data.stats.oldest_movie_watched && page_data.stats.oldest_movie_watched.title) || 'The Great Dictator' %></div>
              <div class="mini-card__value" data-stat="oldest-year"><%= (page_data.stats.oldest_movie_watched && page_data.stats.oldest_movie_watched.year) || 1940 %></div>
            </div>
          </div>
          <div class="col-12 col-md-6 col-lg-3">
            <div class="mini-card surface">
              <div class="mini-card__label"><i class="far fa-hourglass-end"></i> Newest Watched</div>
              <div class="mini-card__title" data-stat="newest-title"><%= (page_data.stats.newest_release_watched && page_data.stats.newest_release_watched.title) || 'Oppenheimer' %></div>
              <div class="mini-card__value" data-stat="newest-year"><%= (page_data.stats.newest_release_watched && page_data.stats.newest_release_watched.year) || 2023 %></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

