
<div class="container" style="margin-top: 30px;">
    <div class="row">
        <div class="col-md-6">
            <h4>Support Case</h4>
            <p><strong>Title:</strong> <%= page_data.found_case.title %></p>
            <p><strong>Open date:</strong> <%= page_data.found_case.opened_date %></p>
            <p><strong>Last update</strong> <%= page_data.found_case.last_updated %></p>
            <p><strong>Seen by support:</strong> <%= page_data.found_case.seen_by_support %></p>
            <p><strong>Resolved:</strong> <%= page_data.found_case.resolved %></p>

            <div class="dropdown-divider" style="margin: 0px 0px 10px 0px"></div>
            
            <form action="/support/<%= page_data.found_case._id %>" method="POST" encType="multipart/form-data">
    
                <div class="form-group">
                    <label for="message_text"><strong>Send new message</strong></label>
                    <textarea name="message" rows="10" class="form-control" id="message_text" aria-describedby="message_textHelp" aria-required="true" required></textarea>
                </div>

                <input type="hidden" name="answered_by" value="<%= user._id %>">
                <input type="hidden" name="username" value="<%= user.local.username %>">
            
                <button type="submit" class="btn btn-primary btn-lg btn-block">Send</button>
            </form>
        </div>
        <div class="col-md-6">
            <h4>Messages</h4>

            <div class="dropdown-divider" style="margin: 0px 0px 10px 0px"></div>

            <% page_data.found_case.messages.forEach(function (message, index){ %>
                <p>
                    <strong>Written by: </strong><%= message.username %>
                    <br>
                    <strong>Date: </strong><%= new Date(message.date) %>
                    <br>
                    <strong>Message: </strong><%= message.message %>
                    <br>
                    
                </p>

                <div class="dropdown-divider" style="margin: 0px 0px 10px 0px"></div>

          <% }); %>
        </div>
    </div>
</div>

