        <div class="col-md-6">
            <h4>Sign Up</h4>
            <!-- show any messages that come back with authentication -->
            <% if (Object.keys(page_data.signup_error).length != 0) { %>
            <div class="alert alert-danger">
                <%= page_data.signup_error %>
            </div>
            <% } %>
            <form method="POST" action="/signup">
                <div class="form-group">
                    <input  required 
                            id="new_username"
                            name="username" 
                            class="form-control" 
                            placeholder="Username" 
                            type="text">
                </div>
                <div class="form-group">
                    <input  required 
                            id="new_email" 
                            name="email" 
                            class="form-control" 
                            placeholder="Email" 
                            type="email" 
                            autocomplete="email">
                </div>
                <div class="form-group">
                    <input  required 
                            id="new_password" 
                            name="password"     
                            class="form-control" 
                            placeholder="Password" 
                            type="password" 
                            autocomplete="new-password">
                </div>
                <div class="form-group">
                    <input  required 
                            id="new_password_confirm" 
                            name="confirm" 
                            class="form-control" 
                            placeholder="Confirm Password" 
                            type="password" 
                            autocomplete="new-password">
                    <small id="newPassWordHelp" class="form-text" style="color: red;">Your passwords needs to match!</small>
                </div>
                <div class="form-group">
                    <div class="progress">
                        <div id="progressBar" class="progress-bar bg-danger" role="progressbar" style="width: 0%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <small id="passWordStrength" class="form-text" style="color: red;">You're password is too weak</small>
                </div>
                <div class="form-check">
                    <input required type="checkbox" class="form-check-input" style="margin-left: 0px;" id="exampleCheck1">
                    <label class="form-check-label"  for="exampleCheck1">Accept our <a style="color: lightblue" href="/policy/terms-of-service" target="_blank">Terms of Service</a></label>
                </div>
                <div class="form-group">
                    <button id="newUser" type="submit" class="btn btn-block btn-outline-primary" disabled>Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>