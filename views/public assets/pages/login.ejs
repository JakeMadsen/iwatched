<div class="container">
    <div class="row" style="padding: 20px 0px 20px 0px;">
        <div class="col-md-6">
            <h4>Sign in</h4>
            <form method="POST" action="/login">
                <div class="form-group">
                    <% if (Object.keys(page_data.login_error).length != 0) { %>
                        <input id="login_email" name="email" class="form-control" placeholder="Email or Username" type="text" autocomplete="email" value="<%= page_data.login_error.flash[0].login %>">
                    <% } else { %>
                        <input id="login_email" name="email" class="form-control" placeholder="Email or Username" type="text" autocomplete="email">
                    <% } %>
                </div>
                <div class="form-group">
                    <input id="login_password" name="password" class="form-control" placeholder="Password" type="password" autocomplete="current-password">
                </div>
                <div class="form-group">
                    <button id="login_submit" type="submit" class="btn btn-block btn-outline-primary" disabled> Login </button>
                </div>
                <% if (Object.keys(page_data.login_error).length != 0) { %>
                    <div class="alert alert-danger">
                        <h3  style="color: #101010; text-align: center;">
                            <%= page_data.login_error.flash[0].error %>
                        </h3>
                    </div>
                <% } %>

                <a class="small float-right" href="#">Forgot password?</a>
            </form>
           
        </div>

