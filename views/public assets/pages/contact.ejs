<div class="container" style="margin-top:16px;">
  <div class="card contact-card" style="background:#1b1b1b; border:1px solid #2a2a2a; border-radius:12px;">
    <div class="card-header" style="background:transparent; border-bottom:1px solid #2a2a2a;">
      <h3 style="margin:0;">Contact</h3>
    </div>
    <div class="card-body">
      <% if(page_data.message == false) { %>
      <form action="/contact" method="POST" encType="multipart/form-data">
        <!-- Honeypot field (hidden from users, bots will fill) -->
        <div style="position:absolute;left:-9999px;top:-9999px;" aria-hidden="true">
          <label for="contact_homepage">Homepage</label>
          <input type="text" id="contact_homepage" name="homepage" tabindex="-1" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="message_title">Title</label>
          <input name="title" type="text" class="form-control" id="message_title" aria-describedby="message_titleHelp" value="" aria-required="true">
          <small id="message_titlelHelp" class="form-text" style="opacity:.75;">Message subject</small>
        </div>

        <div class="form-group">
          <label for="message_email">Email</label>
          <% if (typeof user !== 'undefined' && user && user.local && user.local.email) { %>
            <input name="email" type="email" class="form-control" id="message_email" aria-describedby="message_emailHelp" value="<%= user.local.email %>" readonly aria-required="true">
            <small id="message_emailHelp" class="form-text" style="opacity:.75;">Your email (auto-filled)</small>
          <% } else { %>
            <input name="email" type="email" class="form-control" id="message_email" aria-describedby="message_emailHelp" value="" aria-required="true" placeholder="you@example.com">
            <small id="message_emailHelp" class="form-text" style="opacity:.75;">Enter your email so we can reply</small>
          <% } %>
        </div>

        <div class="form-group">
          <label for="message_type">Department</label>
          <select name="type" id="message_type" class="form-control" aria-required="true">
            <option selected>Choose...</option>
            <option>Account</option>
            <option>Suggestions</option>
            <option>Bugs</option>
            <option>Help</option>
          </select>
          <small class="form-text" style="opacity:.75;">Choose what you need</small>
        </div>

        <div class="form-group">
          <label for="message_text">Message</label>
          <textarea name="text" rows="8" class="form-control" id="message_text" aria-describedby="message_textHelp" aria-required="true"></textarea>
          <small id="message_textHelp" class="form-text" style="opacity:.75;">Write your message here</small>
        </div>

        <input type="hidden" name="from" value="<%= (typeof user !== 'undefined' && user && user._id) ? user._id : '' %>">

        <% if (page_data && page_data.captcha && page_data.captcha.provider === 'recaptcha') { %>
          <div class="form-group" style="margin:10px 0;">
            <div class="g-recaptcha" data-sitekey="<%= page_data.captcha.sitekey %>"></div>
          </div>
        <% } else if (page_data && page_data.captcha && page_data.captcha.provider === 'hcaptcha') { %>
          <div class="form-group" style="margin:10px 0;">
            <div class="h-captcha" data-sitekey="<%= page_data.captcha.sitekey %>"></div>
          </div>
        <% } %>
        <button type="submit" class="btn btn-primary">Send</button>
      </form>
      <% } else { %>
      <div>
        <h4>Thanks for your message<% if (typeof user !== 'undefined' && user && user.local && user.local.username) { %>, <%= user.local.username %><% } %>!</h4>
        <div class="dropdown-divider"></div>
        <p><strong>Title:</strong> <%= page_data.message.title %></p>
        <p><strong>Type:</strong> <%= page_data.message.type %></p>
        <p><strong>Email:</strong> <%= page_data.message.email %></p>
        <p><strong>Message:</strong><br><%= page_data.message.text %></p>
      </div>
      <% } %>
    </div>
  </div>
</div>
<% if (page_data && page_data.captcha && page_data.captcha.provider === 'recaptcha') { %>
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
<% } else if (page_data && page_data.captcha && page_data.captcha.provider === 'hcaptcha') { %>
  <script src="https://js.hcaptcha.com/1/api.js" async defer></script>
<% } %>
