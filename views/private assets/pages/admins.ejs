<div class="container" style="margin-top:12px;">
  <h3>Admins & Roles</h3>
  <div class="dropdown-divider"></div>

  <div class="row">
    <div class="col-md-6">
      <div class="card" style="background:#1b1b1b;border:1px solid #2a2a2a;border-radius:8px;">
        <div class="card-header" style="background:transparent;border-bottom:1px solid #2a2a2a;">
          <strong>Roles</strong>
        </div>
        <div class="card-body">
          <table class="table table-dark table-striped mb-2">
            <thead><tr><th>Name</th><th>Permissions</th><th></th></tr></thead>
            <tbody>
              <% (page_data.roles||[]).forEach(function(r){ %>
                <tr>
                  <td style="width:160px;"><%= r.name %></td>
                  <td><code><%= Array.isArray(r.permissions)? r.permissions.join(', ') : r.permissions %></code></td>
                  <td style="width:80px;"><button class="btn btn-sm btn-secondary" disabled>Edit</button></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
          <small class="text-muted">Visual only for now â€” wiring to follow.</small>
          <hr>
          <h6>Create new role</h6>
          <form>
            <div class="form-group"><input class="form-control" placeholder="Role name (e.g., Content)" disabled></div>
            <div class="form-group">
              <div class="form-check"><input class="form-check-input" type="checkbox" id="perm_users" disabled><label for="perm_users" class="form-check-label">Manage users</label></div>
              <div class="form-check"><input class="form-check-input" type="checkbox" id="perm_support" disabled><label for="perm_support" class="form-check-label">Manage support</label></div>
              <div class="form-check"><input class="form-check-input" type="checkbox" id="perm_ann" disabled><label for="perm_ann" class="form-check-label">Manage announcements</label></div>
              <div class="form-check"><input class="form-check-input" type="checkbox" id="perm_uploads" disabled><label for="perm_uploads" class="form-check-label">Moderate uploads</label></div>
              <div class="form-check"><input class="form-check-input" type="checkbox" id="perm_metrics" disabled><label for="perm_metrics" class="form-check-label">View metrics</label></div>
              <div class="form-check"><input class="form-check-input" type="checkbox" id="perm_imp" disabled><label for="perm_imp" class="form-check-label">Impersonate user</label></div>
            </div>
            <button class="btn btn-primary" disabled>Create</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card" style="background:#1b1b1b;border:1px solid #2a2a2a;border-radius:8px;">
        <div class="card-header" style="background:transparent;border-bottom:1px solid #2a2a2a;">
          <strong>Admins</strong>
        </div>
        <div class="card-body">
          <table class="table table-dark table-striped">
            <thead><tr><th>User</th><th>Role</th><th></th></tr></thead>
            <tbody>
              <% (page_data.admins||[]).forEach(function(a){ %>
                <tr>
                  <td><a href="/<%= a.id %>" target="_blank" style="color:lightblue;"><%= a.username %></a></td>
                  <td><%= a.role %></td>
                  <td style="width:160px;">
                    <button class="btn btn-sm btn-secondary" disabled>Edit</button>
                    <button class="btn btn-sm btn-danger" disabled>Remove</button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
          <hr>
          <h6>Add admin</h6>
          <form>
            <div class="form-row">
              <div class="col"><input class="form-control" placeholder="User ID or slug" disabled></div>
              <div class="col">
                <select class="form-control" disabled>
                  <% (page_data.roles||[]).forEach(function(r){ %>
                    <option><%= r.name %></option>
                  <% }) %>
                </select>
              </div>
              <div class="col"><button class="btn btn-primary btn-block" disabled>Add</button></div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

