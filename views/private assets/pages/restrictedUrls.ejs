<div id="urlHeader">
    <div class="row">
        <div class="col-md-6">
            <h2>Restricted URL's</h2>
            <p>
                Add url routes here to protect them against
                conflicting with other routes
            </p>
        </div>
        <div class="col-md-6">
            <h2>Restrict new page URL</h2>
            <form action="/admin/restricted-urls" method="POST">
                <!-- name -->
                <div class="form-group">
                    <label for="page_name" >Url Name</label>
                    <input name="name" type="text" class="form-control" id="page_name" placeholder="urlname(ex. about)">
                </div>

                <!-- reason -->
                <div class="form-group">
                    <label for="page_reason">Why is this URL restricted?</label>
                    <select name="reason" id="page_reason" class="form-control">
                        <option value="site_route">Site route / reserved path</option>
                        <option value="derogatory">Derogatory / sensitive term</option>
                        <option value="profanity">Profanity</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <!-- text -->
                <div class="form-group">
                    <label for="page_text">Details / notes</label>
                    <textarea name="text" rows="5" class="form-control" id="page_text" placeholder="Optional extra context (visible only to admins)"></textarea>
                </div>

                <button type="submit" class="btn btn-danger">Restrict</button>
            </form>
        </div>
    </div>
</div>

<div style="margin-top:20px;">
  <h3>Restricted URLs</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>URL</th>
        <th>Why</th>
        <th>Created by</th>
        <th>Description</th>
        <th>Creation date</th>
        <th style="width:160px;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% page_data.restrictedUrls.forEach(function(url){ %>
        <tr>
          <td><%= url._id %></td>
          <td><%= url.restricted_url %></td>
          <td><%= url.reason || 'custom' %></td>
          <td><%= url.created_by %></td>
          <td><%= url.info %></td>
          <td><%= url.creation_date %></td>
          <td>
            <button type="button" class="btn btn-sm btn-primary">Edit</button>
            <button type="button" class="btn btn-sm btn-danger">Delete</button>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</div>
