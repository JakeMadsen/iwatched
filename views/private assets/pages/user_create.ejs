<div class="container-fluid">
  <h3>Create User</h3>
  <% if (page_data && page_data.err) { %><div class="alert alert-danger"><%= page_data.err %></div><% } %>
  <form method="POST" action="/admin/users/create" style="max-width:720px;">
    <div class="form-row">
      <div class="form-group col-md-4"><label>Username</label><input name="username" class="form-control" required></div>
      <div class="form-group col-md-4"><label>Email</label><input name="email" class="form-control" required></div>
      <div class="form-group col-md-4"><label>Password</label><input name="password" class="form-control" placeholder="default: Password123!"></div>
    </div>
    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-user-plus"></i> Create</button>
    <a href="/admin/users" class="btn btn-secondary">Back</a>
  </form>
</div>

