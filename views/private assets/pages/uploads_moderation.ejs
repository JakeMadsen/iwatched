<div class="container" style="margin-top:12px;">
  <h3>Uploads Moderation</h3>
  <div class="dropdown-divider"></div>
  <p class="text-muted" style="margin-bottom:8px;">Latest avatars and banners. Click delete to remove the file; if it is the user's active avatar/banner, their profile reference is cleared.</p>
  <div class="row">
    <% (page_data.items||[]).slice(0,200).forEach(function(it){ %>
      <div class="col-md-3" style="margin-bottom:12px;">
        <div class="card" style="background:#1b1b1b;border:1px solid #2a2a2a;border-radius:8px;">
          <div class="card-body" style="padding:8px;">
            <div style="font-size:12px;opacity:.8;margin-bottom:6px;">
              <strong><%= it.type %></strong> · <a href="/<%= it.userId %>" target="_blank" style="color:lightblue;">user</a>
            </div>
            <a href="<%= it.url %>" target="_blank"><img src="<%= it.url %>" style="width:100%;height:150px;object-fit:cover;border-radius:6px;" alt="upload"></a>
            <div style="font-size:12px;opacity:.8;margin-top:6px;word-break:break-all;">
              <div><%= it.file %></div>
              <div><%= (it.size/1024).toFixed(0) %> KB · <%= new Date(it.lastModified).toLocaleString() %></div>
            </div>
            <form action="/admin/uploads/<%= it.userId %>/<%= encodeURIComponent(it.file) %>/delete" method="POST" style="margin-top:6px;">
              <button class="btn btn-sm btn-danger btn-block" onclick="return confirm('Delete this file?')">Delete</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

