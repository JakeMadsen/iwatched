
    <div class="row" style="margin-top: 30px;;">
        <div class="col-md-6">
            <h4>Support Case</h4>
            <p><strong>Title:</strong> <%= page_data.found_case.title %></p>
            <p><strong>Open date:</strong> <%= new Date(page_data.found_case.opened_date).toLocaleString() %></p>
            <p><strong>Last update</strong> <%= new Date(page_data.found_case.last_updated).toLocaleString() %></p>
            <p><strong>Seen by support:</strong> <%= page_data.found_case.seen_by_support %></p>
            <p><strong>Resolved:</strong> <%= page_data.found_case.resolved %></p>

            <form action="/admin/support/case/respond/<%= page_data.found_case._id %>" method="POST" encType="multipart/form-data" style="margin-bottom:10px;">
    
                <div class="form-group">
                    <label for="message_text">Message</label>
                    <textarea name="message" rows="10" class="form-control" id="message_text" aria-describedby="message_textHelp" aria-required="true" required></textarea>
                </div>

                <input type="hidden" name="opened_by" value="<%= user._id %>">
            
                <button type="submit" class="btn btn-primary btn-lg btn-block">Send</button>
            </form>
            <form method="POST" action="/admin/support/case/close/<%= page_data.found_case._id %>">
              <button type="submit" class="btn btn-outline-light btn-lg btn-block">Resolve case</button>
            </form>

        </div>
        <div class="col-md-6">
            <h4>Messages</h4>

            <div class="dropdown-divider" style="margin: 0px 0px 10px 0px"></div>

            <% page_data.found_case.messages.forEach(function (message, index){ %>
                <div style="display:flex; gap:10px; align-items:flex-start; margin-bottom:12px;">
                  <% if (message.persona_avatar) { %>
                    <img src="/static/style/img/personas/<%= message.persona_avatar %>" style="width:36px;height:36px;border-radius:50%;object-fit:cover;">
                  <% } else if (message.user_avatar) { %>
                    <img src="<%= message.user_avatar %>" style="width:36px;height:36px;border-radius:50%;object-fit:cover;">
                  <% } %>
                  <div>
                    <div style="font-weight:700; ">
                      <%= message.persona_name || message.username || (message.author_type==='support'?'Support':'User') %>
                      <span style=" font-weight:400; margin-left:8px; font-size:12px;"><%= new Date(message.date).toLocaleString() %></span>
                    </div>
                    <div style="white-space:pre-wrap;"> <%= message.message %> </div>
                  </div>
                </div>

                <div class="dropdown-divider" style="margin: 0px 0px 10px 0px"></div>

          <% }); %>
        </div>
    </div>

    <script>
      (function(){ if('<%= page_data.message %>'==='sent'){ try{ showToast('Message sent','success'); }catch(e){} } })();
    </script>
